<div class="container2 my-3">

<div class="card bg-light mb-4 hover-1">
  <div class="card-title text-dark light-red">
    <div class="text-white px-2 py-1 d-flex justify-content-between align-items-center">
      <h4><%= @event.title.capitalize%></h4>
      <p>Creator : <%=@event.creator.username%></p>
    </div>
  </div>
  <div class="card-body bg-light text-dark px-0">
    <p class="text-justify px-2"><%=@event.description%></p>
  </div>
  <div class="card-footer light-red text-dark px-2">
    <p class="text-white">Event Date: <%= @event.date%></p>
  <div class="mt-3">
<p class="align-self-center text-white">Number of people: <%= @event.attendees.count%></p>
<hr class="bg-light">

<h6 class="text-white">List of names:</h6>
<% @event.attendees.each do |attendee|%>
  <ul class="list-unstyled pb-3 text-white">
    <li><%= attendee.username%></li>
  </ul>
<%end%>
  </div>
</div>
</div>

</div>
