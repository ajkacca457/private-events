<div class="container2 my-4 light-red p-3">

<%= form_for(@event, local: true) do |form| %>
<div class="text-white">
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>

  <div class="field">
    <%= form.text_field :title, class:"d-block w-100 mb-3 pl-2 input border",placeholder:"Name of the event" %>
  </div>

  <div class="field">
    <%= form.text_area :description, class:"d-block w-100 mb-3 pl-2 border",placeholder:"Enter event description",rows:"8" %>
  </div>


  <div class="field mb-3">
    <%= form.date_field :date, class:"form-control datepicker w-50 text-danger border-1 border-danger"%>
  </div>

  <div class="actions">
    <%= form.submit "Submit",class:"btn btn-warning btn-block rounded-0 py-2" %>
  </div>
<% end %>
</div>
